<div class="container mt-5">
    <div class="card shadow p-4">
        <h1 class="text-center mb-4">CoderShop</h1>
    </div>

    <div id="products-box" class="mt-4 d-flex border p-3 rounded bg-white"
        style="overflow-y: auto; gap: 10px; flex-wrap: wrap;">
        {{#each response.docs}}
            <div class="col-md-4 mb-4" style="margin: auto">
                <div class="card shadow-sm">
                    <img src="{{#if this.thumbnails}}{{this.thumbnails}}{{else}}/img/image-not-found.jpg{{/if}}" class="card-img-top"
                        alt="Imagen de {{this.name}}" style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}} ({{this._id}})</h5>
                        <p class="card-text"><strong>Categoría:</strong> {{this.category}}</p>
                        <p class="card-text"><strong>Descripción:</strong> {{this.description}}</p>
                        <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
                        <p class="card-text"><strong>Descuento:</strong> {{this.discount}}%</p>
                        <p class="card-text"><strong>Stock:</strong> {{this.stock}} unidades</p>
                        <p class="card-text"><strong>Código:</strong> {{this.code}}</p>
                        <p class="card-text"><strong>Estado:</strong>
                            <span class="badge {{#if this.status}}bg-success{{else}}bg-danger{{/if}}">
                                {{#if this.status}}Disponible{{else}}Agotado{{/if}}
                            </span>
                        </p>
                        <a href="/product/{{this._id}}" class="btn btn-primary mx-2">Mas información</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="mt-4 d-flex border p-3 rounded bg-white" style="justify-content: center">
        {{#if response.hasPrevPage}}
            <a href="?page={{response.prevPage}}&limit={{response.limit}}" class="btn btn-primary mx-2">Página anterior</a>
        {{/if}}

        <span class="mx-3 align-self-center">Página {{response.page}} de {{response.totalPages}}</span>

        {{#if response.hasNextPage}}
            <a href="?page={{response.nextPage}}&limit={{response.limit}}" class="btn btn-primary mx-2">Página siguiente</a>
        {{/if}}
    </div>

</div>

<script src="/js/home.js" ></script>